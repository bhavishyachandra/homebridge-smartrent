{
  "displayName": "SmartRent",
  "name": "@bhavishyachandra/homebridge-smartrent",
  "version": "1.3.0",
  "description": "Homebridge plugin for SmartRent installations",
  "keywords": [
    "homebridge",
    "homebridge-plugin",
    "hap",
    "homekit",
    "smartrent"
  ],
  "license": "Apache-2.0",
  "publishConfig": {
    "registry": "https://registry.npmjs.org/",
    "tag": "latest"
  },
  "author": "Hunter Creery",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/bhavishyachandra/homebridge-smartrent.git"
  },
  "engines": {
    "node": ">=12",
    "homebridge": ">=1.3.5"
  },
  "main": "dist/index.js",
  "files": [
    "src",
    "homebridge-ui",
    "dist",
    "config.example.json",
    "config.schema.json",
    "CHANGELOG.md",
    "screenshot.png"
  ],
  "scripts": {
    "prepare": "husky install",
    "typecheck": "tsc --noEmit",
    "prettier": "prettier --check .",
    "format": "prettier --write .",
    "lint": "eslint src/**.ts",
    "lint:fix": "eslint src/**.ts --fix",
    "clean": "rimraf ./dist",
    "compile": "tsc",
    "build": "npm-run-all clean compile",
    "watch": "npm run build && npm link && nodemon",
    "prepublishOnly": "npm-run-all prettier lint build",
    "semantic-release": "cross-env HUSKY=0 semantic-release",
    "release": "npm-run-all build semantic-release",
    "test": "echo \"Error: no test specified\" && exit 0"
  },
  "dependencies": {
    "@homebridge/plugin-ui-utils": "^0.0.19",
    "axios": "^0.25.0",
    "ws": "^8.8.1"
  },
  "devDependencies": {
    "@commitlint/cli": "^17.0.3",
    "@commitlint/config-conventional": "^17.0.3",
    "@semantic-release/changelog": "^6.0.1",
    "@semantic-release/commit-analyzer": "^9.0.2",
    "@semantic-release/git": "^10.0.1",
    "@semantic-release/github": "^8.0.2",
    "@semantic-release/npm": "^9.0.0",
    "@semantic-release/release-notes-generator": "^10.0.3",
    "@types/node": "^18.7.1",
    "@types/ws": "^8.5.3",
    "@typescript-eslint/eslint-plugin": "^5.10.0",
    "@typescript-eslint/parser": "^5.10.0",
    "cross-env": "^7.0.3",
    "eslint": "^8.7.0",
    "homebridge": "^1.4.0",
    "husky": "^8.0.3",
    "lint-staged": "^13.0.3",
    "nodemon": "^2.0.15",
    "npm-run-all": "^4.1.5",
    "prettier": "^2.5.1",
    "rimraf": "^3.0.2",
    "semantic-release": "^19.0.2",
    "ts-node": "^10.4.0",
    "typescript": "^4.5.5"
  },
  "types": "./dist/index.d.ts",
  "bugs": {
    "url": "https://github.com/bhavishyachandra/homebridge-smartrent/issues"
  },
  "homepage": "https://github.com/bhavishyachandra/homebridge-smartrent#readme"
}
